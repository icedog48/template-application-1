@using System
@using System.Collections.Generic
@using System.Linq
@using System.Text
@using System.IO
@using RazorEngine
@using RazorEngine.Templating
@using Code4U.Models

@inherits RazorEngine.Templating.Code4UTemplateBase<Entity>
using @(Model.Project.Name).Core.Models;
using @(Model.Project.Name).NhibernateRepositories.Mappings;
using System;
using System.Collections.Generic;
using System.Linq;

namespace @(Model.Project.Name).NhibernateRepositories.Mappings
{
    public class @(Model.Name)Map : _EntityMap<@Model.Name>
    {
        public @(Model.Name)Map()
        {
        @foreach (var property in Model.Properties.Where(x => !x.HasFlag("PrimaryKey")).ToList())
        {
            @:@IncludeInLine("_PropertyMap.cshtml", property, typeof(Property))
            @:
        }
        }
    }
}
